<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StudioStatistic.Client.ViewModels"
             x:Class="StudioStatistic.Client.Views.LoginPage"
             Title="Вход">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Studio Statistic"
                   FontSize="32"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <Label Text="Войдите в аккаунт"
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30" />

            <Entry Placeholder="Email"
                   Text="{Binding Email}" Focused="OnEntryFocused" />

            <Entry Placeholder="Пароль"
                   Text="{Binding Password}"
                   IsPassword="True" Focused="OnEntryFocused" />

            <Button Text="Войти"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsNotBusy}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="Blue" />

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>