<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StudioStatistic.Client.ViewModels"
             x:Class="StudioStatistic.Client.Views.ClientsPage"
             Title="Клиенты">

    <CollectionView ItemsSource="{Binding Clients}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="#1E1E1E" CornerRadius="12" Margin="10">
                    <StackLayout Padding="15">
                        <Label Text="{Binding FirstName} {Binding LastName}" FontSize="18" TextColor="#D32F2F" />
                        <Label Text="{Binding QuantityOfVisits, StringFormat='Посещений: {0}'}" TextColor="White" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>