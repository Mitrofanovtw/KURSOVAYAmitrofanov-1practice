<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StudioStatistic.Client.ViewModels"
             x:Class="StudioStatistic.Client.Views.AllRequestsPage"
             Title="Все заявки студии">

    <CollectionView ItemsSource="{Binding Requests}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="#1E1E1E" CornerRadius="12" Margin="10">
                    <StackLayout Padding="15">
                        <Label Text="{Binding Description}" FontSize="18" TextColor="#D32F2F" />
                        <Label Text="{Binding DateOfVisit, StringFormat='Дата: {0:dd.MM.yyyy HH:mm}'}" TextColor="White" />
                        <Label Text="{Binding Status}" TextColor="Orange" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>