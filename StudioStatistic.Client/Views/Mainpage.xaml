<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudioStatistic.Client.MainPage"
             Title="MainPage"
             BackgroundColor="#121212">
    <ScrollView>
        <StackLayout Padding="30" Spacing="30">

            <Label Text="{Binding WelcomeText}" 
                   FontSize="28" 
                   TextColor="#D32F2F" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding MenuItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1E1E" 
                               CornerRadius="12" 
                               Margin="0,10" 
                               HasShadow="True"
                               BorderColor="#D32F2F">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateCommand}" />
                            </Frame.GestureRecognizers>
                            <StackLayout Padding="20" Orientation="Horizontal" Spacing="20">
                                <Image Source="{Binding Icon}" HeightRequest="50" WidthRequest="50" />
                                <Label Text="{Binding Title}" 
                                       FontSize="20" 
                                       TextColor="White" 
                                       VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Выход" 
                    Command="{Binding LogoutCommand}" 
                    BackgroundColor="DarkRed" 
                    TextColor="White" 
                    CornerRadius="8" />
        </StackLayout>
    </ScrollView>
</ContentPage>